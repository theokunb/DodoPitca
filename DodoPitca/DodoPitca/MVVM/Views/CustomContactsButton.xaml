<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DodoPitca.MVVM.Models"
             xmlns:viewmodel="clr-namespace:DodoPitca.MVVM.ViewModels"
             x:Class="DodoPitca.MVVM.Views.CustomContactsButton">
    <ContentView.BindingContext>
        <viewmodel:CustomContactsButtonViewModel/>
    </ContentView.BindingContext>
  <ContentView.Content>
      <StackLayout Orientation="Horizontal">
            <Label Text="{Binding Text}"
                 FontSize="16"
                 TextColor="Black"
                 HorizontalOptions="StartAndExpand"
                 VerticalOptions="Center"
                   Margin="10"/>
            <Image Source="{local:ImageResource DodoPitca.Images.galochka_90.png}"
                   VerticalOptions="Center"
                   HorizontalOptions="EndAndExpand"
                   Margin="10"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>